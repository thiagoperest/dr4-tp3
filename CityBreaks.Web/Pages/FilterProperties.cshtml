@page
@model FilterPropertiesModel
@{
    ViewData["Title"] = "Filtrar Propriedades";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Filtrar Propriedades</h1>
            <p class="text-muted">Use os filtros abaixo para encontrar propriedades específicas</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Filtros de Busca</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="Filters.MinPrice" class="form-label">Preço Mínimo (R$)</label>
                                <input asp-for="Filters.MinPrice" class="form-control" type="number" step="0.01" min="0"
                                       max="10000" placeholder="0,00">
                                <span asp-validation-for="Filters.MinPrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Filters.MaxPrice" class="form-label">Preço Máximo (R$)</label>
                                <input asp-for="Filters.MaxPrice" class="form-control" type="number" step="0.01" min="0"
                                       max="10000" placeholder="10.000,00">
                                <span asp-validation-for="Filters.MaxPrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Filters.CityName" class="form-label">Cidade</label>
                                <input asp-for="Filters.CityName" class="form-control"
                                       placeholder="Ex: Lisboa, Paris...">
                                <span asp-validation-for="Filters.CityName" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Filters.PropertyName" class="form-label">Nome da Propriedade</label>
                                <input asp-for="Filters.PropertyName" class="form-control"
                                       placeholder="Ex: Hotel, Apartamento...">
                                <span asp-validation-for="Filters.PropertyName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Buscar Propriedades</button>
                                <a asp-page="/FilterProperties" class="btn btn-outline-secondary">Limpar Filtros</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.HasSearched)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <strong>Filtros aplicados:</strong> @Model.AppliedFiltersText<br>
                    <strong>Resultados encontrados:</strong> @Model.Properties.Count propriedade(s)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                @if (Model.Properties.Any())
                {
                    <div class="row">
                        @foreach (var property in Model.Properties)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">@property.Name</h5>
                                        <p class="card-text text-muted">
                                            @property.City.Name, @property.City.Country.CountryName
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="h5 text-success mb-0">
                                                @property.PricePerNight.ToString("C") / noite
                                            </span>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <a asp-page="/CityDetails" asp-route-name="@property.City.Name"
                                           class="btn btn-primary btn-sm">Ver Cidade</a>
                                        <a asp-page="/EditProperty" asp-route-id="@property.Id"
                                           class="btn btn-warning btn-sm">Editar</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <h4>Nenhuma propriedade encontrada</h4>
                        <p>Não há propriedades que atendam aos critérios informados.</p>
                        <p>Tente ajustar os filtros e buscar novamente.</p>
                    </div>
                }
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-page="/Index" class="btn btn-secondary">Voltar à página inicial</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
