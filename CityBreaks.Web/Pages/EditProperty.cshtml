@page "/property/edit/{id:int}"
@model EditPropertyModel
@{
    ViewData["Title"] = "Editar Propriedade";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Editar Propriedade</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Input.CurrentCityName))
                    {
                        <div class="alert alert-info">
                            <strong>Propriedade atual:</strong> @Model.Input.Name<br>
                            <strong>Localização atual:</strong> @Model.Input.CurrentCityName, @Model.Input.CurrentCountryName
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Nome da Propriedade</label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Ex: Hotel Paradise, Apartamento Centro, etc.">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PricePerNight" class="form-label">Preço por Noite (R$)</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Input.PricePerNight" class="form-control" type="number" step="0.01" min="0.01" max="10000" placeholder="0,00">
                            </div>
                            <span asp-validation-for="Input.PricePerNight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.CityId" class="form-label">Cidade</label>
                            <select asp-for="Input.CityId" asp-items="Model.Cities" class="form-select">
                                <option value="">-- Selecione uma cidade --</option>
                            </select>
                            <span asp-validation-for="Input.CityId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Atualizar Propriedade</button>
                            <a asp-page="/Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
